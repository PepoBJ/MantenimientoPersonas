@model MantenimientoPersonasSVS.Models.PJuridica
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Mantenimiento Persona</title>
    <style>
        * {
            color: steelblue;
        }

        #contenido {
            width: 80%;
            margin: 0 auto;
            text-align: center;
        }

        h2 {
            line-height: 3;
            border-bottom: 1px solid steelblue;
        }

        a {
            display: inline-block;
            text-decoration: none;
            color: #FFF;
            background: steelblue;
            padding: .5em;
            margin: .5em;
            border-radius: 5px;
        }
        .campo {
            line-height: 2;
        }
    </style>
</head>
<body>
    <div id="contenido">
        <h2>Mantenimiento Personas Juridica [Editar]</h2>
        <a href="/PNatural/listar">Mantenimiento Personas Naturales</a>
        <a href="/PJuridica/listar">Mantenimiento Personas Juridicas</a>
        <form action="/PJuridica/Editar" method="post">
            <div class="campo">
                <label for="ruc">Ruc:</label>
                <input type="text" name="ruc" value="@Model.ruc" />
            </div>
            <div class="campo">
                <label for="razonSocial">Razon Social:</label>
                <input type="text" name="razonSocial" value="@Model.razonSocial" />
            </div>
            <div class="campo">
                <label for="direccion">Direccion:</label>
                <input type="text" name="direccion" value="@Model.direccion" />
            </div>
            <div class="campo">
                <label for="telefono">Telefono:</label>
                <input type="text" name="telefono" value="@Model.telefono" />
            </div>
            <div class="campo">
                <label for="correoElectronico">E-Mail:</label>
                <input type="text" name="correoElectronico" value="@Model.correoElectronico" />
            </div>
            <div class="campo">
                <label for="paginaURL">URL:</label>
                <input type="text" name="paginaURL" value="@Model.paginaURL" />
            </div>
            <div class="campo boton">
                <input type="submit" value="Editar" />
            </div>
        </form>
    </div>
</body>
</html>